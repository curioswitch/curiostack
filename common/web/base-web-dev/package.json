    "@babel/preset-react": "7.0.0-beta.40",
    "@babel/preset-stage-0": "7.0.0-beta.40",
    "@curiostack/base-node-dev": "0.0.3",
    "@hugmanrique/react-markdown-loader": "0.0.2",
    "@types/history": "4.6.2",
    "@types/intl": "1.2.0",
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.40",
    "@types/react-dom": "16.0.3",
    "@types/react-helmet": "5.0.5",
    "@types/react-hot-loader": "3.0.6",
    "@types/react-intl": "2.3.5",
    "@types/react-loadable": "5.3.3",
    "@types/react-redux": "5.0.15",
    "@types/react-router-dom": "4.2.4",
    "@types/react-router-redux": "5.0.12",
    "@types/redux-immutable": "3.0.38",
    "@types/webpack-env": "1.13.5",
    "babel-loader": "8.0.0-beta.2",
    "babel-plugin-react-intl": "2.4.0",
    "babel-plugin-styled-components": "1.5.1",
    "brotli-webpack-plugin": "0.5.0",
    "commander": "2.15.0",
    "file-loader": "1.1.11",
    "fork-ts-checker-webpack-plugin": "0.4.0",
    "fs-extra": "5.0.0",
    "handlebars": "4.0.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.0.6",
    "http-proxy-middleware": "0.17.4",
    "image-webpack-loader": "4.1.0",
    "inquirer": "5.1.0",
    "koa-proxies": "0.6.2",
    "koa-router": "7.4.0",
    "koa2-history-api-fallback": "0.0.5",
    "raw-loader": "0.5.1",
    "react-hot-loader": "4.0.0",
    "rimraf": "2.6.2",
    "ts-loader": "4.0.1",
    "tsconfig-paths-webpack-plugin": "2.0.0",
    "tslint-config-airbnb": "5.7.0",
    "tslint-react": "3.5.1",
    "webapp-webpack-plugin": "1.1.1",
    "webpack": "4.1.1",
    "webpack-cli": "2.0.10",
    "webpack-serve": "0.2.0",
    "zopfli-webpack-plugin": "0.1.0"
  },
