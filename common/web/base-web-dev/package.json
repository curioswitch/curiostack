{
  "name": "@curiostack/base-web-dev",
  "version": "0.0.10",
  "description": "Curiostack's base dev dependencies for browser applications.",
  "main": "build/index.js",
  "bin": {
    "build": "./build/scripts/build.js",
    "check": "./build/scripts/check.js",
    "fix": "./build/scripts/fix.js",
    "generate": "./build/scripts/generate.js",
    "generate-component": "./build/scripts/generate-component.js",
    "start": "./build/scripts/start.js"
  },
  "repository": "curioswitch/curiostack",
  "author": "Choko <choko@curioswitch.org>",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn run build:clean",
    "build": "tsc --outDir ./build --noEmit false --target es2016 && copyfiles -u 1 src/**/*.hbs build",
    "build:clean": "rimraf ./build",
    "//": "Normally we would lint before build, but we are actually building the lint config here.",
    "postbuild": "yarn run lint",
    "prepublish": "yarn run build",
    "lint": "tslint --project tsconfig.json"
  },
  "dependencies": {
    "@babel/core": "7.0.0-beta.40",
